{
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext"],

    "declaration": true,
    "declarationMap": true,
    "outDir": "dist/es",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
